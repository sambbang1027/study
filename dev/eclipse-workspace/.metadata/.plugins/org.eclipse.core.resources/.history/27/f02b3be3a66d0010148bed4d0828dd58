package operation1;

public class OpTest10 {
	public static void main(String[] args) {
		int a = 10;

		a +=2 ; //	a= a+2;
		// = 은 반드시 오른쪽 위치
		//a =+2 는 a =2가 되버
		System.out.println(a);

		a -= 2;
		System.out.println(a);
		a *= 2;
		System.out.println(a);
		a /= 2;
		System.out.println(a);
		a %= 2;
		System.out.println(a);

		//시프트 연산도 축약 가능
		a >>= 2;
		System.out.println(a);



	}
}
