package oop5;


class Account {
	static int money1;  // static 을 추가하면 값이 누적됨
	// static 은
	int money2;

	Account(int money){
		money1 += money;
		money2 += money;
	}
}
public class StaticTest {
	public static void main(String[] args) {
		System.out.println(Account.money1);
		Account a1 = new Account(1000);
		System.out.println(Account.money1 + ":" + a1.money2);
		Account a2 = new Account(1000);
		System.out.println(Account.money1 + ":" + a2.money2);
		Account a3 = new Account(1000);
		System.out.println(Account.money1 + ":" + a3.money2);


	}
}
