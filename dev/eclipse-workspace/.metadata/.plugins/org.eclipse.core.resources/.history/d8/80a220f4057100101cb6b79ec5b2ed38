package basic;

import java.util.*;

public class Day7_train {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		int out = 0;
		int in = 0;
		int total = 0;

		List<Integer> arr = new ArrayList<>();
		
		for ( int i = 0; i < 10; i++) {
			
			if(i == 0) {
				in = sc.nextInt();
				total = in;
				continue;
			}
			if(i == 9) {
				out = sc.nextInt();
				total = total - out;
				continue;
			}
			out = sc.nextInt();
			in = sc.nextInt();
			total = total - out + in;
			arr.add(total);
		}
		
		int max = 0;
		int indx = 0;
		for(int k = 0; k < arr.size(); k++) {
			if (max < arr.get(k)) {
				max = arr.get(k);
				indx = k;
			}
		}
		System.out.println(indx);
		
	}
}
