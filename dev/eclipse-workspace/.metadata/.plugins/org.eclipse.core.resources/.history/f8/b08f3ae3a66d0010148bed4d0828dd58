package oop2;

public class Point2D {
	 // java의 가장 최상위 클래스 Object
	//java에 생성된 모든 클래스들은 default로 Object 클래스를 상속하고 있음
	// 따라서 object 클래스 안에 Point2D 클래스가 생성된다.

	int x;
	int y;

	public Point2D() {
//		this.x =1;
//		this.y = 2;
		// 기본값을 주고 싶을 때 위처럼 직접 명시할 수 있지만
		// 밑에 처럼 이미 정의된 메서드를 사용하는게 더 좋다.
		this(1,2);
		System.out.println("Point2D() 수행");
		// constructor에서 다른 constructor를 호출할 때는 제일 먼저 수행해야함
	}


	public Point2D(int x, int y) {
		super(); // 이건 지워도 됨
		this.x = x;
		this.y = y;
		System.out.println("Point2D(x,y) 수행");

	}

	 //public Point2D() {}
	// default constructor 기본생성자는 내부 컴파일러에서 자동으로 생성
	//만약 따로 생성자를 만들면 default는 만들어지지 않기 때문에
	// parameter가 없는 constructor가 필요하다면다시 만들어줘야함

}
